<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="IndexBar">
        <attr name="letterSize" format="dimension" />
        <attr name="letterColor" format="color" />
        <attr name="focusLetterColor" format="color" />
        <attr name="letterSpacingExtra" format="float" />
    </declare-styleable>

    <color name="item_decoration_title_background">#23282E</color>
    <color name="item_decoration_title_fontcolor">#74869C</color>

    <color name="background_recyclerview">#2E363C</color>

    <color name="listitem_title_text">#D8DFE7</color>
    <color name="listitem_subtitle_text">#ccc</color>

    <color name="dialog_hint">#8074869C</color>

    <color name="indexbar_letter_color">#7FFFFFFF</color>

    <dimen name="item_decoration_title_height">20dp</dimen>
    <dimen name="item_decoration_title_start_margin">16dp</dimen>
    <dimen name="item_decoration_title_fontsize">12sp</dimen>

    <dimen name="dp_10">10dp</dimen>
    <dimen name="sp_14">14dp</dimen>

    <!-- 网络访问的加载进度框 -->
    <style name="netLoadingDialog" parent="@android:style/Theme.Dialog">

        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置无边框 -->
        <!-- <item name="android:windowFrame">@null</item> -->
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置为浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置动画 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>