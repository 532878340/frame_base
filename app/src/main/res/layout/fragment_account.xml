<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvStatus"
        style="@style/MatchParent"
        android:gravity="center"
        android:text="暂无联系人"
        android:visibility="gone" />

    <com.smart.frame.ui.view.loading.LoadingView
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        style="@style/MatchParent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入搜索条件" />

        <LinearLayout style="@style/MatchParent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleView"
                style="@style/WeightOne"
                android:overScrollMode="never" />

            <RelativeLayout
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/white">

                <com.smart.frame.ui.fragment.contact.IndexBar
                    android:id="@+id/indexBar"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:focusLetterColor="@color/gray_minor"
                    app:letterColor="@color/gray_minor"
                    app:letterSize="10sp"
                    app:letterSpacingExtra="1.4" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>