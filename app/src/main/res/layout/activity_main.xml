<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    style="@style/MatchParent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        style="@style/WeightOne" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:background="@color/white"
        tl:tl_iconGravity="TOP"
        tl:tl_iconHeight="40pt"
        tl:tl_iconMargin="4pt"
        tl:tl_iconWidth="40pt"
        tl:tl_indicator_bounce_enable="true"
        tl:tl_indicator_color="@color/colorPrimaryDark"
        tl:tl_indicator_gravity="TOP"
        tl:tl_indicator_style="TRIANGLE"
        tl:tl_textSelectColor="@color/colorPrimaryDark"
        tl:tl_textUnselectColor="@color/gray_minor"
        tl:tl_textsize="24pt"
        tl:tl_underline_color="@color/divider"
        tl:tl_underline_gravity="TOP"
        tl:tl_underline_height="1pt" />
</LinearLayout>
